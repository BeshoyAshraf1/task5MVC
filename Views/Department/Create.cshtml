@model Depratment

<h2>Create New Department</h2>

<form asp-action="CreateDepartment" method="post">
    <div class="form-group">
        <label asp-for="name" class="control-label">Department Name</label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="managername" class="control-label">Manager Name</label>
        <input asp-for="managername" class="form-control" />
        <span asp-validation-for="managername" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>