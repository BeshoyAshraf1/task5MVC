@{
}
@model List<Instractor>



<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">image</th>
            <th scope="col">Salary</th>
            <th scope="col">address</th>
            <th scope="col">DepratmentName</th>
            <th scope="col">CourseName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="~/images/@item.image" alt="@item.Name" width="50" /></td>
                <td>@item.Salary</td>
                <td>@item.address</td>
                <td>@item.Depratments.name</td>
                <td>@item.Courses.Name</td>
                <td>
                    <a href="InstractorController1/Details/@item.Id">Details </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
                <td>
                    <form asp-action="DeleteInstractor" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this instractor?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
                <td>
                    <a asp-action="CreateInstractor" class="btn btn-primary">Create New Instractor</a>

                </td>
            </tr>
        }
    </tbody>
</table>